{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": ".",
    "strict": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "outDir": "./dist",
    "lib": [
      "es6",
      "ES2018.AsyncGenerator",
      "ES2016.Array.Include"
    ]
  },
  "include": [
    "src/**/**/*.ts",
    "__tests__/**/*.ts",
  ],
  "exclude": [
    "../node_modules"]
}